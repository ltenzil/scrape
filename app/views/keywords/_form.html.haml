= form_for @keyword do |f|
  - if @keyword.errors.any?
    #error_explanation
      %h2= "#{pluralize(@keyword.errors.count, "error")} prohibited this keyword from being saved:"
      %ul
        - @keyword.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :value, class: 'form-label'
    = f.text_field :value, class: 'form-control'
  .mb-3
    = f.label :hits, class: 'form-label'
    = f.text_field :hits, class: 'form-control'
  .mb-3
    = f.label :stats, class: 'form-label'
    = f.text_field :stats, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-md btn-primary'
    = link_to 'Back', keywords_path, class: 'btn btn-md btn-secondary'
